# ====================================
# DATABASE
# ====================================
DATABASE_URL="file:./prisma/dev.db"
# Para produção (Vercel), use PostgreSQL:
# PRISMA_DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# ====================================
# SERVER
# ====================================
PORT=3001
NODE_ENV=development

# ====================================
# ANTHROPIC API (Claude)
# ====================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ====================================
# OPENAI API (Whisper para transcrição)
# ====================================
OPENAI_API_KEY=your_openai_api_key_here

# ====================================
# CORS
# ====================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ====================================
# FILE UPLOADS
# ====================================
MAX_FILE_SIZE=52428800
# 50MB = 52428800 bytes
# 100MB = 104857600 bytes

UPLOADS_DIR=./uploads

# ====================================
# GOOGLE CALENDAR API
# ====================================
# Para obter credenciais:
# 1. Acesse https://console.cloud.google.com
# 2. Crie um projeto
# 3. Ative a Google Calendar API
# 4. Crie credenciais OAuth 2.0
# 5. Acesse /api/appointments/auth/google para obter tokens

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/appointments/auth/google/callback
GOOGLE_ACCESS_TOKEN=your-access-token
GOOGLE_REFRESH_TOKEN=your-refresh-token

# ====================================
# APPLE CALENDAR (CalDAV) - Opcional
# ====================================
# Para configurar:
# 1. Acesse https://appleid.apple.com
# 2. Gere uma senha de app específica para calendário
# 3. Configure a URL do CalDAV do iCloud

APPLE_CALDAV_URL=https://caldav.icloud.com/[apple-id]/calendars/[calendar-id]
APPLE_CALDAV_USERNAME=your-email@icloud.com
APPLE_CALDAV_PASSWORD=xxxx-xxxx-xxxx-xxxx

# ====================================
# VERCEL BLOB STORAGE
# ====================================
# OBRIGATÓRIO para produção na Vercel
# O Vercel tem filesystem efêmero - arquivos em /tmp são perdidos
# Use Vercel Blob para armazenamento persistente
#
# Como obter o token:
# 1. Acesse https://vercel.com/dashboard
# 2. Selecione seu projeto
# 3. Vá em Storage → Create Database → Blob
# 4. Copie o BLOB_READ_WRITE_TOKEN

BLOB_READ_WRITE_TOKEN=vercel_blob_rw_xxxxxxxxxxxxx
